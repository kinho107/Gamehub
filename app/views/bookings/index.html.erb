<h1>Your bookings</h1>

    <% @bookings.each do |booking| %>
  <div class="container">
    <div class="card border-dark mb-3">
      <div class="card-header" style="text-align: center;"><%= booking.game.title %></div>
        <% str = booking.created_at.to_s %>
       <p><%= date = Date.parse str %> </p>
        <p> Remember to return the game on <%= Date.today.class %> </p>
        <%= link_to "Delete booking" ,
                        booking_path(booking),
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
