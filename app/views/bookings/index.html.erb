<h1>Your bookings</h1>

  <% @bookings.each do |booking| %>
  <div class="card">
  <p> <%= booking.game.title %> </p>
  <p> <%= booking.duration %> days</p>
  <%= link_to "Delete booking" ,
                  booking_path(booking),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  </div>
  <% end %>
