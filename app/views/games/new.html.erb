<%= simple_form_for @game do |f| %>
<%= f.input :title, placeholder: 'e.g. Call of Duty' %>
<%= f.input :category, placeholder: 'e.g. Action, RPG, MMORPG' %>
<%= f.input :description, placeholder:'Call of Duty is a first-person shooter video game franchise published by Activision', as: :text%>
<%= f.input :daily_price, placeholder: "£££"%>
 <%= f.input :photo, as: :file %>
<%= f.submit "Rent the game"%>
<% end %>