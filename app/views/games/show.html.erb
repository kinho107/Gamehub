<div class="grid">
    <div>
      <h1>Description</h1>
      <p><%= @game.description %></p>
    </div>
    <div>
      <h2><%= @game.title %></h2>
      <p><%= @game.category %></p>
      <p><%= @game.daily_price/100 %> Â£ per Week</p>
      <% if @game.photo.attached? %>
        w  <%= cl_image_tag @game.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <%= image_tag 'no_image.png', height: 300, width: 300 %>
      <% end %>
    </div>
    <div class="form-style-8">
      <%= simple_form_for Booking.new do |f| %>
        <%= f.hidden_field :game_id, value: @game.id %>
        <%= f.hidden_field :start_date, value: date.today %>
        <%= f.input :duration, placeholder: '5 days' %>
        <%= f.submit "Book game"%>
      <% end %>
    </div>
  </div>

