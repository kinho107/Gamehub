<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="logo-group">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "gamehub_logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

</div>
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="form-group form-inline mt-3 d-flex">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn">Search
    </button>
  </div>
<% end %>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "/", class: "btn" %>
          <%= link_to "Rent out!", new_game_path, class: "btn" %>
          <%= link_to "Bookings", bookings_path, class: "btn" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "geek.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item d-flex">
          <%= link_to "Sign up", new_user_registration_path, class: "btn" %>
          <%= link_to "Login", new_user_session_path, class: "btn" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
